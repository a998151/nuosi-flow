<?xml version="1.0" encoding="UTF-8"?>
<logic-flow id="subflow_simple" name="子流程调用" desc="子流程调用范例">

    <databus>
        <attr id="staff_id" type="string" name="工号信息">
            <limit size="10"/>
        </attr>
    </databus>

    <start id="start" name="开始节点" next="queryWorkingHoursBySubflow">
        <var key="staff_id" />
    </start>

    <action id="queryWorkingHoursBySubflow" name="子流程查询工时信息" next="printWorkingHours">
        <input>
            <var key="staff_id"/>
        </input>
        <subflow flow="working_hours_query"/>
        <output mapping="true">
            <var key="working_hours_infos"/>
        </output>
    </action>

    <action id="printWorkingHours" name="循环打印工时信息" next="end">
        <foreach iterator="working_hours_infos">
            <![CDATA[
            QB.printf("第%s行数据，数据内容：%s", INDEX, ITERATOR);
        ]]>
        </foreach>
    </action>

    <end id="end" name="结束节点">
        <var key="working_hours_infos"/>
    </end>
</logic-flow>